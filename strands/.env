# AWS Configuration
AWS_REGION=<REGION>

# DynamoDB Tables
DYNAMODB_CUSTOMERS_TABLE=customers
DYNAMODB_PRODUCTS_TABLE=products
DYNAMODB_SEARCH_HISTORY_TABLE=search_history
DYNAMODB_SEARCH_HISTORY_TABLE=orders

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://<DOMAIN_ID>.<REGION>.es.amazonaws.com
OPENSEARCH_INDEX_NAME=products-catalog

# Bedrock Configuration (Bedrock Model Inference Profile ID)
BEDROCK_MODEL_ID=us.anthropic.claude-haiku-4-5-20251001-v1:0

# Domain Agents Configuration
# Available options: bloodwork_analyzer, body_composition_analyzer, sales_assistant, maintenance_specialist, grocery_assistant
# Example: DOMAIN_AGENTS=bloodwork_analyzer,body_composition_analyzer
DOMAIN_AGENTS=<AGENT_1>,<AGENT_2>

# Application Settings
DEBUG=true
PORT=8000
CORS_ORIGINS=https://<CLOUDFRONT_ID>.cloudfront.net

